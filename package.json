{
  "name": "themetron",
  "version": "1.0.0",
  "description": "Tool to customize the themes for any electron-based app",
  "main": "main.js",
  "scripts": {
    "start": "electron --trace-warnings .",
    "publish": "electron-builder -p always"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "zAlweNy26",
        "repo": "Themetron"
      }
    ],
    "appId": "it.alwe.themetron",
    "mac": {
      "category": "alwe.themetron.app"
    }
  },
  "author": "zAlweNy26",
  "license": "ISC",
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "electron-reloader": "^1.2.1"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.1",
    "fs-extra": "^10.0.0",
    "ini": "^2.0.0",
    "klaw-sync": "^6.0.0",
    "registry-js": "^1.15.1",
    "simple-plist": "^1.3.0"
  }
}
